<div class="row konfirmasyon">
  <div class="col-md-4 col-md-offset-3 basari-mesaji">Tutanak ekledigin icin tesekkurler!</div>
  <div class="col-md-5 sosyal">
    <ul class="list-inline">
      <li><a href="https://www.facebook.com/saydirac?ref=hl" class="btn-social btn-outline-orange"><i class="fa fa-fw fa-facebook"></i></a>
      </li>
      <li><a href="#" class="btn-social btn-outline-orange"><i class="fa fa-fw fa-google-plus"></i></a>
      </li>
      <li><a href="http://www.twitter.com/saydirac" class="btn-social btn-outline-orange"><i class="fa fa-fw fa-twitter"></i></a>
      </li>
    </ul>
  </div>
</div>
<div class="row tutanak-detaylari">
  <div class="col-md-12">
    <h3 class="title">
      <%= title %>
    </h3>
  </div>
  <div class="col-md-6">
    <table class="table table-condensed">
      <tr>
        <th scope="row">İl</th>
        <td><%= evidence.city %></td>
      </tr>
      <tr>
        <th scope="row">İlçe</th>
        <td><%= evidence.district %></td>
      </tr>
      <tr>
        <th scope="row">Sandık No</th>
        <td><%= evidence.no %></td>
      </tr>
      <tr>
        <th scope="row">Tutanak Türü</th>
        <td><%= types.evidence[evidence.type]  %></td>
      </tr>
      <tr>
        <th scope="row"></th>
        <td>
          <% var date = new Date(evidence.created_at); %>
          <em>
          <%= date.getHours() %>:<%= date.getMinutes() %>
          <%= date.getDate() %>.<%= date.getMonth()+1 %>.<%= date.getFullYear() %>
          tarihinde eklenmiştir
          </em>
        </td>
      </tr>
    </table>
  </div>
  <div class="col-md-6 tutanak-resmi">
    <img  class="img-thumbnail" src="<%=s3path + evidence.img %>">
  </div>
</div>
<div class="row cta">
  <div class="col-md-6">
    <a class="btn btn-outline-orange btn-lg btn-block" href="/evidences">Tüm Tutanaklar</a>
  </div>
  <div class="col-md-6 tutanak-oku-btn">
    <a href="/readings/<%= evidence._id %>/new">
      <input type="submit" class="btn btn-outline-orange btn-lg btn-block" value="TUTANAK OKU"/></a>
  </div>
</div>


