<!-- evidences/show -->
<div class="row ">
  <div class="col-xs-11">
    <h3>
      <%= title %>
    </h3>
  </div>
</div>

<div class="row ">
  <div class="col-xs-6">
    <table class="table table-condensed">
      <tr>
        <th scope="row">İl</th>
        <td><%= evidence.city %></td>
      </tr>
      <tr>
        <th scope="row">İlçe</th>
        <td><%= evidence.district %></td>
      </tr>
      <tr>
        <th scope="row">Sandık No</th>
        <td><%= evidence.no %></td>
      </tr>
      <tr>
        <th scope="row">Tutanak Türü</th>
        <td><%= types.evidence[evidence.type]  %></td>
      </tr>
      <tr>
        <th scope="row"></th>
        <td>
          <% var date = new Date(evidence.created_at); %>
          <em>
          <%= date.getHours() %>:<%= date.getMinutes() %>
          <%= date.getDate() %>.<%= date.getMonth()+1 %>.<%= date.getFullYear() %>
          tarihinde eklenmiştir
          </em>
        </td>
      </tr>
    </table>
  </div>

  <div class="col-xs-5">
   <a href="/readings/<%= evidence._id %>/new">
     <input type="submit" class="btn btn-default btn-primary btn-lg btn-block" value="TUTANAK OKU"/></a>
   </div>
 </div>

 <div class="row ">
  <div class="col-xs-11">
    <img src="<%=s3path + evidence.img %>" width="100%">
  </div>
</div>
<br>

